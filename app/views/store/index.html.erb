<div class="w-full">
  <%= render 'notice' %>
  <h1 class="font-bold text-xl mb-6 pb-2 border-b-2">
    Your Pragmatic Catalog
  </h1>

  <%= turbo_stream_from 'store/products' %>
  <h2 id="visit-counter" class="text-red-600 animate-pulse">You have visited this page <%= @visit_count %> times.</h2>
  <ul>
    <% cache @products do %>
      <% @products.each do |product| %>

          <%= render partial: 'product', object: product %>

      <% end %>
    <% end %>
  </ul>
</div>
